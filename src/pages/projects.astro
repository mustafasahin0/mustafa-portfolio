---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Spring Framework Projects</div>
  </div>

  <HorizontalCard
    title="Spring Framework"
    img="/post_img.webp"
    desc="Custom implementation and exploration of Spring Framework core concepts. Demonstrates dependency injection, AOP, and Spring configuration patterns."
    url="https://github.com/mustafasahin0/spring-framework-new"
    badge="JAVA"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Ticketing Project - Spring Security"
    img="/post_img.webp"
    desc="Enterprise ticketing system with Spring Security integration. Features include JWT authentication, role-based access control, and secure REST APIs."
    url="https://github.com/mustafasahin0/ticketing-project-security-new"
    badge="SECURITY"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Full-Stack Applications</div>
  </div>

  <HorizontalCard
    title="Ticketing Project - REST API"
    img="/post_img.webp"
    desc="RESTful API implementation for ticketing system. Includes comprehensive CRUD operations, data validation, exception handling, and API documentation."
    url="https://github.com/mustafasahin0/ticketing-project-rest-new"
    badge="REST"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Ticketing Project - ORM"
    img="/post_img.webp"
    desc="Ticketing system with Hibernate ORM implementation. Demonstrates entity relationships, transactions, and database operations using JPA."
    url="https://github.com/mustafasahin0/ticketing-project-orm-new"
    badge="ORM"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Ticketing Project - MVC"
    img="/post_img.webp"
    desc="MVC architecture implementation for ticketing system using Spring MVC. Features Thymeleaf templates, form handling, and server-side rendering."
    url="https://github.com/mustafasahin0/ticketing-project-mvc-new"
    badge="MVC"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="MidWest Oil Project"
    img="/post_img.webp"
    desc="Comprehensive web application for oil and gas industry operations management. Built with modern web technologies and industry best practices."
    url="https://github.com/mustafasahin0/MidWestOilProject"
    badge="WEB"
  />
</BaseLayout>
